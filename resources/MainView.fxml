<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TabPane xmlns="http://javafx.com/javafx/24"
         xmlns:fx="http://javafx.com/fxml/1"
         fx:id="mainTabPane"
         fx:controller="ui.controllers.MainController">
    <tabs>
        <Tab text="Catalog">
            <content>
                <AnchorPane>
                    <fx:include source="CatalogView.fxml" />
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Loans">
            <content>
                <AnchorPane>
                    <fx:include source="LoanView.fxml" />
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Users">
            <content>
                <AnchorPane>
                    <fx:include source="UserView.fxml" />
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Reports">
            <content>
                <AnchorPane>
                    <fx:include source="ReportView.fxml" />
                </AnchorPane>
            </content>
        </Tab>
        <Tab text="Settings">
            <content>
                <AnchorPane>
                    <fx:include source="SettingsView.fxml" />
                </AnchorPane>
            </content>
        </Tab>
    </tabs>
</TabPane>