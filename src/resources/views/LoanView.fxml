<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<GridPane hgap="10" vgap="10" padding="10" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.library.ui.controllers.LoanController">
    <TextField fx:id="userIdField" promptText="User ID" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="isbnField" promptText="Book ISBN" GridPane.rowIndex="0" GridPane.columnIndex="1" />
    <DatePicker fx:id="dueDatePicker" promptText="Due Date" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <Button text="Check Out" onAction="#onCheckout" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <TextField fx:id="returnLoanIdField" promptText="Loan ID to Return" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <Button text="Check In" onAction="#onCheckin" GridPane.rowIndex="4" GridPane.columnIndex="0" />
</GridPane>